{%for block in section.blocks %}
    <div class="coeur-bourgogne_container" >
        <div class="coeur-bourgogne_text">
            <h2 class ="titre-bourgogne" >{{block.settings.titre-bourgogne}}</h2>
            <h3 class ="sous-titre-bourgogne">{{block.settings.sous-titre-bourgogne}}</h3>
            <p class ="p_bourgogne">{{block.settings.p_bourgogne}}</p>
          	<button class="bourgogne_btn" onclick="window.location.href = '{{block.settings.lien-1}}'" type="button" >{{block.settings.bouton-text}}</button>
        </div>

      <img class ="bourgogne-ble_img" src="{{block.settings.image-title | img_url:'master'}}"/>
      <img class ="bourgogne-village_img" src="{{block.settings.image-catalog | img_url:'master'}}"/>

    </div>
{%endfor%}

{% style %}
.coeur-bourgogne_container{
	position: relative;
	background-image: url("https://cdn.shopify.com/s/files/1/0650/7049/8025/files/Background2_home.png?v=1656155138");

}

.coeur-bourgogne_container {
	position: relative;
    width: 100%;
    height: fit-content;
	box-sizing: border-box;
	

}
.coeur-bourgogne_text {
	position: relative;
	width: 41%;
	left: 673px;
	top: 580px;
	z-index: 3;
	color: white;

}

.bourgogne-ble_img {
	width: 57%;
	height: 730px;
	position: relative;
	bottom: 280px;
	left: 12%;
	z-index: 1;

}
.bourgogne-village_img {
	width: fit-content;
	height: auto;
	position: relative;
	top: -600px;
	z-index: 2;
}

.coeur-bourgogne_text h2 {
	font-size: 50px;
	font-weight: bold;
	color: white;
	margin-top: 0px;
	margin-bottom: 15px;
}

.coeur-bourgogne_text h3 {
	font-size: 35px;
	color: white;
	margin-bottom: 10px;
	font-family: "MundaneNouveauRegular";
}

.coeur-bourgogne_text p {
	font-size: 15px;
	font-style: italic;
	color: white;
	margin-top: 0 px;
	font-size: 20px;
	font-family: "Minion-DisplayItalic";
}
.bourgogne_btn {
	margin-top : 30px;
	width: 206.87px;
	height: 57px;
	font-size: 20px;
	font-weight: 500;
	font-family: "League spartan", sans-serif;
	color: black;
	background: rgba(255, 255, 255, 0.9);
	border: 1px
}

{% endstyle %}

