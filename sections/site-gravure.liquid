{%for block in section.blocks %}
<div class="site-gravure-container">
    <h2 class="site-gravure-titre-petit">{{block.settings.titre-petit}}</h2>
    <h2 class="site-gravure-titre-normal">{{block.settings.titre-normal}}</h2>
    <h2 class="site-gravure-ndd">{{block.settings.ndd}}</h2>
    <button value="{{block.settings.button-text}}" type="button" class="site-gravure-lien">{{block.settings.lien-1}}</button>
</div>
{%endfor%}


{% stylesheet %}

.site-gravure-container{
	display: flex;
	flex-direction: column;
	background-color: rgba(115,115,115, 0.6);
	padding: 50px;
	position: relative
}

.site-gravure-titre-petit{
	margin: 0px;
}

.site-gravure-titre-normal{
	border-bottom: 2px solid #ffffff;
}

.site-gravure-lien{
	position: absolute;
    bottom: 51px;
    height: 70px;
    width: 300px;
    /*color: rgba(115,115,115, 0);
    background-color: rgba(115,115,115, 0);
    border: rgba(115,115,115, 0);
	z-index:1;*/
}

{% endstylesheet %}

