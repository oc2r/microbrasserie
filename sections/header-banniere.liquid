{%for block in section.blocks %}
    <div class="header-banniere-container-master" >
        <div class="header-banniere-container">
            <h1 class ="header-banniere-titre" >{{block.settings.heading}}</h1>
            <p class="header-banniere-description">{{block.settings.description}}</p>
        </div>
    </div>
{%endfor%}

{% style %}

.header-banniere-container-master{
	position: relative;
	width: 100%;
	background-image: url("https://cdn.shopify.com/s/files/1/0650/7049/8025/files/Background2_home.png?v=1656155138");

}

.header-banniere-container{
    position: relative;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
	padding: 100px;
	background-image: url("https://cdn.shopify.com/s/files/1/0650/7049/8025/files/page-brasserie-header_ba49d3cc-6232-438d-ace3-1b6827d6b35e.png?v=1656084922");
	background-repeat: no-repeat;
    background-size: cover;
}


.header-banniere-container h1 {
	color: #FFFFFF;
	font-weight: 700;
}

.header-banniere-description{
    font-size: 1.5rem;
	color: #FFFFFF;
}

{% endstyle %}

{% schema %}
{
    "name": "brasserie header",
    "class" : "section",
    "settings": [
        {
            "type":"text",
            "label":"title catalog",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"title catalog",
            "settings":[
                        {
                            "type":"text",
                            "label":"H1 homepage",
                            "id":"heading"
                        },
                        {
                            "type":"text",
                            "label":"text_presentation",
                            "id":"description"
                        }
                    ]
     } 
],
"presets" : [
                    {
                        "category":"image",
                        "name": "brasserie header" 
                    }
                    ]

}
{% endschema %}


