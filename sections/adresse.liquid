{%for block in section.blocks %}
<div class="contact-brasserie-container">
    <div class="contact-adresse-brasserie">
        <h2>Adresse</h2>
        <p>{{block.settings.contact-adresse-brasserie}}</p>
    </div>
    <div class="contact-tel-brasserie">
        <h2>telephone</h2>
        <p>{{block.settings.contact-tel-brasserie}}</p>
    </div>
</div>
{%endfor%}

{% style %}
.contact-brasserie-container{
    position: absolute;
    right: 10%;
    top: 61%;
    width: 20%;
    font-size: 400%;
}

{% endstyle %}

{% schema %}
{
    "name": "adresse form",
    "class" : "section",
    "settings": [
        {
            "type":"text",
            "label":"adresse form",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"adresse form",
            "settings":[                  
				{
                  	"type":"text",
                  	"label":"contact adresse brasserie",
                  	"id":"contact-adresse-brasserie"
                  },
				{
                    "type":"text",
                    "label":"contact tel brasserie",
                    "id":"contact-tel-brasserie"
                },
				{
                  	"type":"text",
                  	"label":"contact mail brasserie",
                  	"id":"contact-mail-brasserie"
                  }
            ]
     } 
],
"presets" : [
    {
    "category":"image",
    "name": "adresse form" 
    }
]

}
{% endschema %}