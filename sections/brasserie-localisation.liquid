{%for block in section.blocks %}
<div class="brasserie-localisation-container-master" style="background-image: url('{{block.settings.image-fond | img_url:'master'}}');">  
	<h2 class="brasserie-localisation-container-master-titre" >{{block.settings.titre}}</h2>
    <div class="brasserie-localisation-container" >
        <div class="brasserie-localisation-container-carte">
            <img class="brasserie-localisation-carte" src="{{block.settings.image-carte | img_url:'master'}}" alt="">
        </div>
        <div class="brasserie-localisation-container-coordonnees">
            <p class="brasserie-localisation-adresse">Adresse : {{block.settings.adresse}} - {{block.settings.code-postal}} {{block.settings.ville}}</p>
            <p class="brasserie-localisation-horaires">Horaires : {{block.settings.horaires}}</p>
            <p class="brasserie-localisation-tel">Tel : {{block.settings.telephone-1}} / {{block.settings.telephone-2}}</p>
        </div>
    </div>
</div>
{%endfor%}

{% style %}

.brasserie-localisation-container-master{
	display:flex;
	flex-direction: column;
	align-items:center;
}

.brasserie-localisation-container-master-titre{
	margin-bottom: 50px;
	padding-bottom: 20px;
	border-bottom: 2px solid #ffffff;
}

.brasserie-localisation-container{
	display: flex;
	flex-direction:row;
}

.brasserie-localisation-container-1, .brasserie-localisation-container-2{
	width: 30%;
}

.brasserie-localisation-carte{
	width:100%;
}


{% endstyle %}

{% schema %}
{
    "name": "localisation",
    "class" : "localisation",
    "settings": [
        {
            "type":"text",
            "label":"localisation",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"localisation",
            "settings":[                  
				{
                  	"type":"text",
                  	"label":"titre",
                  	"id":"titre"
                  },
				{
                    "type":"image_picker",
                    "label":"image-carte",
                    "id":"image-carte"
                },
				{
                  	"type":"text",
                  	"label":"adresse",
                  	"id":"adresse"
                  },
				{
                  	"type":"text",
                  	"label":"code-postal",
                  	"id":"code-postal"
                  },
				{
                  	"type":"text",
                  	"label":"ville",
                  	"id":"ville"
                  },
				{
                    "type":"image_picker",
                    "label":"image-fond",
                    "id":"image-fond"
                }
            ]
     } 
],
"presets" : [
    {
    "category":"image",
    "name": "localisation" 
    }
]

}
{% endschema %}