{%for block in section.blocks %}
<div class="brasserie-localisation-container-master" style="background-image: url('{{block.settings.image-fond | img_url:'master'}}');">  
	<h2 class=" mundane brasserie-localisation-container-master-titre" >{{block.settings.titre}}</h2>
    <div class="brasserie-localisation-container" >
        <div class="brasserie-localisation-container-carte">
            <img class="brasserie-localisation-carte" src="{{block.settings.image-carte | img_url:'master'}}" alt="">
        </div>
        <div class="brasserie-localisation-container-coordonnees">
          <h4>Adresse : </h4>
            <p class="brasserie-localisation-adresse">{{block.settings.adresse}}</p>
          <h4>Horaires : </h4>
            <p class="brasserie-localisation-horaires">{{block.settings.horaires-1}}</p>
            <p class="brasserie-localisation-tel">{{block.settings.horaires-2}}</p>
        </div>
    </div>
</div>
{%endfor%}

{% style %}

.brasserie-localisation-container-master{
	display:flex;
	flex-direction: column;
	align-items:center;
	padding-inline: 150px;
	padding-block: 50px;
}

.brasserie-localisation-container-master-titre{
	margin-bottom: 50px;
	padding-bottom: 20px;
	border-bottom: 1px solid #ffffff;
	font-size: 64px;
}

.brasserie-localisation-container{
	display: flex;
	flex-direction:row;
	justify-content: center;
	align-items: center;
	max-height:100%;
}

.brasserie-localisation-container-carte, .brasserie-localisation-coordonnees{
	width: 40%;
	position:relative;
}

.brasserie-localisation-carte{
	width:100%;
	max-height:100%;
	object-fit: cover;
}

.brasserie-localisation-container-coordonnees{
	margin-left: 50px;
}


{% endstyle %}

{% schema %}
{
    "name": "localisation",
    "class" : "localisation",
    "settings": [
        {
            "type":"text",
            "label":"localisation",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"localisation",
            "settings":[                  
				{
                  	"type":"text",
                  	"label":"titre",
                  	"id":"titre"
                  },
				{
                    "type":"image_picker",
                    "label":"image-carte",
                    "id":"image-carte"
                },
				{
                  	"type":"text",
                  	"label":"adresse",
                  	"id":"adresse"
                  },
				{
                  	"type":"text",
                  	"label":"horaires-1",
                  	"id":"horaires-1"
				},
				{
                  	"type":"text",
                  	"label":"horaires-2",
                  	"id":"horaires-2"
				},
				{
                    "type":"image_picker",
                    "label":"image-fond",
                    "id":"image-fond"
                }
            ]
     } 
],
"presets" : [
    {
    "category":"image",
    "name": "localisation" 
    }
]

}
{% endschema %}