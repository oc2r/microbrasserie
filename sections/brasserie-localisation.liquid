{%for block in section.blocks %}
<div class="brasserie-localisation-container-master" style="background-image: url('{{block.settings.image-fond | img_url:'master'}}');">  
	<h2 class="brasserie-localisation-container-master-titre" >{{block.settings.titre}}</h2>
    <div class="brasserie-localisation-container" >
        <div class="brasserie-localisation-container-carte">
            <img src="" alt="">
        </div>
        <div class="brasserie-localisation-container-coordonnees">
            <p class="brasserie-localisation-adresse">Adresse : {{block.settings.adresse}} - {{block.settings.code-postal}} {{block.settings.ville}}</p>
            <p class="brasserie-localisation-horaires">Horaires : {{block.settings.horaires}}</p>
            <p class="brasserie-localisation-tel">Tel : {{block.settings.telephone-1}} / {{block.settings.telephone-2}}</p>
        </div>
    </div>
</div>
{%endfor%}

{% style %}

.brasserie-notrehistoire-container-master{
	display:flex;
	flex-direction: column;
	align-items:center;
}

.brasserie-notrehistoire-container-master-titre{
	margin-bottom: 50px;
	padding-bottom: 20px;
	border-bottom: 2px solid #ffffff;
}

.brasserie-notrehistoire-container{
	display: flex;
	flex-direction:row;
}

.brasserie-notrehistoire-container-1, .brasserie-notrehistoire-container-2{
	width: 50%;
}

.brasserie-notrehistoire-container-1-texte, .brasserie-notrehistoire-container-2-texte{
	padding: 20px;
}

.brasserie-notrehistoire-container-1-image, .brasserie-notrehistoire-container-2-image{
}

.brasserie-notrehistoire-container-1-image-1, .brasserie-notrehistoire-container-2-image-2{
	width:100%;
	object-fit: cover;    
}

{% endstyle %}

