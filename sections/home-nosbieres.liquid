{%for block in section.blocks %}
<div class="section-nosbieres-container-principal">
      
  	<div class="section-nosbieres-container-secondaire-texte">
        <h2 class="section-nosbieres-titre-petit">{{block.settings.heading-1}}</h2>
        <h2 class="section-nosbieres-titre-normal">{{block.settings.heading-2}}</h2>
        <h3 class="section-nosbieres-sous-titre">{{block.settings.heading-3}}</h3>
        <p class="section-nosbieres-description">{{block.settings.description}}</p>
        <button class="section-nosbieres-btn">NOS BIERES{{block.settings.lien-1}}</button>
    </div>    

    <div class="section-nosbieres-container-secondaire-image">
        <img class="section-nosbieres-image-produit" src="{{block.settings.image-produit | img_url:'master'}}" alt="">
    </div>
  
</div>
{%endfor%}

{% stylesheet %}

.section-nosbieres-container-principal {
	max-height:900px;
	background-image: url({{block.settings.image-nos-bieres-bg | img_url:'master'}});
    background-repeat: no-repeat;
    background-size: cover;
	padding: 50px;
	display:flex;
	flex-direction: column;
}

.section-nosbieres-container-secondaire-texte{
	display:flex;
	flex-direction: column;
    width: 100%;
}

.section-nosbieres-titre-petit{
    font-size: 45px;
}

.section-nosbieres-titre-normal{
    font-size: 50px;
	margin-bottom: 20px;
	border-bottom: 2px solid #ffffff;
}

.section-nosbieres-sous-titre{
    font-size: 35px;
}

.section-nosbieres-description{
    font-size: 20px;
}

.section-nosbieres-container-secondaire-image{
    width: 400px;
}

.section-nosbieres-image-produit{
    max-height: 400px;
}

.section-nosbieres-btn {
	margin-top: 50px;
	margin-bottom : 50px;
	width: 206.87px;
	height: 57px;
	font-size: 20px;
	font-family: "League spartan", sans-serif;
	color: white;
	background: rgba(255, 255, 255, 0.4);
	border: 1px;
}

@media (max-width:640px){
}

@media (min-width:640px){

.section-nosbieres-container-principal {
	padding-left: 50px;
	padding-right: 50px;
}
}

@media (min-width:1040px){

.section-nosbieres-container-principal {
	display:flex;
	flex-direction: row;
	padding-left: 150px;
	padding-right: 150px;
}
.section-nosbieres-container-secondaire-texte{
	width: calc(30%-150px);
	margin-right:50px;

}

.section-nosbieres-image-produit{
	width: 400px;
}

}

@media (min-width: 1920px){
}

{% endstylesheet %}

