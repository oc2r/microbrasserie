{% style %}

.founder-engagement {
	background-image: url("https://cdn.shopify.com/s/files/1/0650/7049/8025/files/Background2_home.png?v=1656155138");
}

.founder-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-inline: auto;
	width: 80%;
    gap: 15px;
    background-color: rgb(189, 245, 245);
}

.founder img {
    width: 390px;
    height: 390px;
    background-color: antiquewhite;
	position: relative;
	
}

.name-founder {
    margin-inline: auto;
	font-size: 35px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: green;
}

.description-founder {

position: absolute;

}



.brasserie-engagements-container-master{
	display:flex;
	flex-direction:column;
	align-items:center;
	position: relative;
    width: 90%;
	margin-inline: auto;
}


.brasserie-engagements-container-master span {
    height: 2px;
    width: 30%;
    margin-inline: auto;
}

.brasserie-engagements-container-master-titre{
	margin-top: 40px;
	margin-bottom: 20px;
	font-size: 60px;
	font-weight: bold;
	color: white;
}

.brasserie-engagements-container {
    display: flex;
    margin-inline: auto;
	width: 90%;
	justify-content: space-between;
}

.brasserie-engagements-container-1 {
    display: flex;
    flex-direction: column;
}

.brasserie-engagements-container-2 {
    display: flex;
    flex-direction: column;
}

.brasserie-engagements {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-inline: 15px;
}

.brasserie-engagements img {
    margin: 10px;
}

.brasserie-engagements p {
	color: white;
}

.brasserie-engagements-3-texte {
