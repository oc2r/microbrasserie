.brasserie-engagements-container-master{
	display:flex;
	flex-direction:column;
	align-items:center;
	position: relative;
    width: 90%;
    background-color: blueviolet;
}




.brasserie-engagements-container-master-titre{
	margin-bottom: 20px;
}

.brasserie-engagements-container {
    display: flex;
    margin-inline: auto;
    background-color: green;
}

.brasserie-engagements-container-1 {
    display: flex;
    flex-direction: column;
}

.brasserie-engagements-container-2 {
    display: flex;
    flex-direction: column;
}

.brasserie-engagements {
    display: flex;
    justify-content: center;
    align-items: center;
}

.brasserie-engagements p {
	color: white;
}

{% endstyle %}

