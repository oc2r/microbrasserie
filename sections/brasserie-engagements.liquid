	color: #ffffff;
}

.brasserie-engagements-container-master{
	display:flex;
	flex-direction:column;
	align-items:center;
	padding-inline:150px;
	padding-block:50px;
}

.brasserie-engagements-container-master-titre{
	margin-bottom: 50px;
	padding-bottom: 20px;
	border-bottom: 2px solid #ffffff;
}

.brasserie-engagements-container{
	display:flex;
	flex-direction: row;
	justify-content: space-between;
	position: relative;
	width:100%;
}

.brasserie-engagements-container-1, .brasserie-engagements-container-2{
	width:40%;
}

.brasserie-engagements-1, .brasserie-engagements-2, .brasserie-engagements-3, .brasserie-engagements-4, .brasserie-engagements-5, .brasserie-engagements-6{
	display:flex;
	flex-direction: row;
	margin-bottom: 20px;
	align-items: center;
}

.brasserie-engagements-1-image, .brasserie-engagements-2-image, .brasserie-engagements-3-image, .brasserie-engagements-4-image, .brasserie-engagements-5-image, .brasserie-engagements-6-image{
