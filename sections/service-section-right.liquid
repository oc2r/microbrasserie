{%for block in section.blocks %}

<div class="service-section-right">
    <div class="service-section-right-container" style="background-image: url('{{block.settings.image-service-bg-right | img_url:'master'}}');">
        <div class="title-description-service-right">
            <h2>{{block.settings.title-service-right}}</h2>
            <p>{{block.settings.description-service-right}}</p>
        </div>
        <img class ="image-service-right" src="{{block.settings.image-service-right | img_url:'master'}}"/>
    </div>
</div>

{%endfor%}
{% style %}

.service-section-right-container {
    display: flex;
    justify-content: flex-end;
    padding: 2%;
    margin-top: 2%;
    width: 69%;
}


.title-description-service-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

{% endstyle %}

{% schema %}
{
    "name": "service section right",
    "class" : "section",
    "settings": [
        {
            "type":"text",
            "label":"service section right",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"service section right",
            "settings":[

            {
                "type":"image_picker",
                "label":"image service right",
                "id":"image-service-right"
            },

            {
                "type":"image_picker",
                "label":"image service bg",
                "id":"image-service-bg-right"
            },

            {
                "type": "text",
                "label": "title service right",
                "id": "title-service-right"
            },
            
            {
                "type": "text",
                "label": "description service right",
                "id": "description-service-right"
            }
        ]
    } 
],
"presets" : [
                    {
                        "category":"image",
                        "name": "service section right" 
                    }
                    ]

}
{% endschema %}


