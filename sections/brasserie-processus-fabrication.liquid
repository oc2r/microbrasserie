{%for block in section.blocks %}
<div class="brasserie-localisation-container-master" style="background-image: url('{{block.settings.image-fond | img_url:'master'}}');">  
	<h2 class="brasserie-localisation-container-master-titre" >{{block.settings.titre}}</h2>
    <div class="brasserie-localisation-container" >
        <img class="brasserie-localisation-carte" src="{{block.settings.image-1 | img_url:'master'}}" alt="">
    </div>
</div>
{%endfor%}

{% style %}

.brasserie-localisation-container-master{
	display:flex;
	flex-direction: column;
	align-items:center;
	padding-inline: 150px;
	padding-block: 50px;
}

.brasserie-localisation-container-master-titre{
	margin-bottom: 50px;
	padding-bottom: 20px;
	border-bottom: 2px solid #ffffff;
}

.brasserie-localisation-container{
	display: flex;
	flex-direction:row;
	justify-content: center;
	align-items: center;
}

.brasserie-localisation-container-carte, .brasserie-localisation-coordonnees{
	width: 40%;
	max-height: 300px;
}

.brasserie-localisation-carte{
	width:100%;
}

.brasserie-localisation-container-coordonnees{
	margin-left: 50px;
}


{% endstyle %}

{% schema %}
{
    "name": "localisation",
    "class" : "localisation",
    "settings": [
        {
            "type":"text",
            "label":"localisation",
            "id":"heading"
        }
    ],
    "blocks": [
        {
            "type":"text",
            "name":"localisation",
            "settings":[                  
				{
                  	"type":"text",
                  	"label":"titre",
                  	"id":"titre"
                  },
				{
                    "type":"image_picker",
                    "label":"image-1",
                    "id":"image-1"
                }				
            ]
     } 
],
"presets" : [
    {
    "category":"image",
    "name": "localisation" 
    }
]

}
{% endschema %}